<% if !current_user %>
  <div class="jumbotron">
    <h1>Your Favorite Movies Reviewed</h1>
    <p>
      Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ullam asperiores, sed voluptates ipsa hic molestiae.
    </p>
    <p>
      <%= link_to "Sign Up to Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %>
    </p>

  </div>
<% end %>
<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(movie.image.url(:medium), class: "image"), movie %>
      </div>
    </div>
  <% end %>
</div>
